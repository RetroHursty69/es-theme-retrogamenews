

<theme>
<formatVersion>4</formatVersion>
 

<!-- System View -->

<feature supported="carousel">
<view name="system">
 <image name="background" extra="true">
	<tile>false</tile>
	<path>./_assets/system-global-bg.jpg</path>
	<size>1 1</size>
	<pos>0 0</pos>
    <zIndex>42</zIndex> 	
 </image>
 <image name="shade" extra="true">
	<path>./_assets/shade.png</path>
	<tile>false</tile>
	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
    <zIndex>44</zIndex>	
 </image> 

 <image name="logo">
	<path>./_assets/logos/${system.theme}.png</path>
	<color>ffffff</color>

 </image>

 <carousel name="systemcarousel">
	<type>horizontal</type>
	<color>ffffff</color>
	<origin>0.5 0.5</origin>
	<pos>1.15 1.5</pos>
	<size>1 1</size> 
	<logoSize>0.3 0.18</logoSize>
	<maxLogoCount>0</maxLogoCount>
 </carousel>

 <text name="systemInfo">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>center</alignment>
	<backgroundColor>00000000</backgroundColor>
	<color>000000</color>
	<origin>0.5 0.5</origin>
	<pos>0.52 0.0723</pos>
	<size>0.980 0.050</size>
	<fontSize>0.017</fontSize>
    <zIndex>45</zIndex> 	
 </text>
 
 
