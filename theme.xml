	<origin>0 0</origin>
	<pos>0 0</pos>
	<size>1 1</size>
    <zIndex>43</zIndex> 	
  </image>

 <helpsystem name="help">
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.016</fontSize>
	<pos>1.066 1.97</pos>
	<textColor>ffffff</textColor>
    <iconColor>ffffff</iconColor>
 </helpsystem>
  
</view>
</feature>





<!-- Gamelist View -->

<view name="basic, detailed, video, grid">

 <image name="background" extra="true">
	<tile>false</tile>
	<path>./_assets/ingame-global-bg.jpg</path>
	<size>1 1</size>
	<pos>0 0</pos>
 </image>

 <image name="logo2" extra="true">
	<path>./_assets/logos/${system.theme}.png</path>
	<color>ffffff</color>
	<origin>0.5 0.5</origin>
	<pos>0.46 0.1</pos>
	<maxSize>0.12 0.12</maxSize>
 </image>
 
 <text name="shortdescription" extra="true">
	<pos>1 1</pos>
 </text>

 
<textlist name="gamelist">
	<selectorColor>ffffff</selectorColor>
	<selectorImagePath>./_assets/icon.png</selectorImagePath>
	<selectedColor>f9971a</selectedColor>
	<selectorHeight>.05</selectorHeight>
	<primaryColor>ffffff</primaryColor>
	<secondaryColor>f9971a</secondaryColor>
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>left</alignment>
	<forceUppercase>1</forceUppercase>
	<pos>0.008 0.01</pos>
	<size>0.4 0.99</size>
	<fontSize>0.03</fontSize>
	<lineSpacing>1.65</lineSpacing>
	<horizontalMargin>0.052</horizontalMargin>
</textlist>

<helpsystem name="help">
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.018</fontSize>
	<pos>0.46 0.92</pos>
	<textColor>78c7ef</textColor>
    <iconColor>78c7ef</iconColor>
</helpsystem>

<image name="controller" extra="true">
	<path>./_assets/controllers/${system.theme}.png</path>
	<tile>false</tile>
	<pos>0.69 0.28</pos>
	<maxSize>0.17 0.17</maxSize>	
</image>

<!-- Hide Unused Elements -->	
<text name="md_description">
	<pos>0 0</pos>
    <color>0b2a49</color>
    <fontPath>./_assets/Roboto-Medium.ttf</fontPath>
    <fontSize>0.018</fontSize>	
</text>
<text name="md_description">
    <pos>1.479 1.725</pos>
    <size>0.44 0.175</size>
    <color>0b2a49</color>
</text>
</view>

<view name="basic, detailed, grid">
 <image name="md_image">
	<origin>0.5 0.5</origin>
	<pos>0.56 0.36</pos>
	<maxSize>0.23 0.36</maxSize>
 </image>
 <text name="longdescription" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>left</alignment>	
	<forceUppercase>0</forceUppercase>
	<fontSize>0.012</fontSize>
	<color>000000</color>
	<origin>1 1</origin>
	<pos>0.77 0.2</pos>
	<size>0.25 0.2</size>
 </text>  
</view>

<feature supported="video">

<view name="video">
 <video name="md_video">
	<origin>0.5 0.5</origin>
	<pos>0.56 0.36</pos>
	<maxSize>0.23 0.36</maxSize>
	<delay>1</delay>
	<showSnapshotNoVideo>true</showSnapshotNoVideo>
	<showSnapshotDelay>true</showSnapshotDelay>
 </video>
 <text name="longdescription" extra="true">
	<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
	<alignment>left</alignment>	
	<forceUppercase>0</forceUppercase>
	<fontSize>0.012</fontSize>
	<color>000000</color>
	<origin>1 1</origin>
	<pos>0.77 0.2</pos>
	<size>0.25 0.2</size>
 </text> 
</view>
</feature>

</theme>
